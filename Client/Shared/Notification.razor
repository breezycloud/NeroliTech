<div class="row">
    <div class="col-auto alert-info justify-content-end">
        <MatSnackbar Timeout="1000" IsOpen="@isOpen">
            <MatSnackbarContent>
                @Title
            </MatSnackbarContent>
        </MatSnackbar>
    </div>
</div>

@code {
    // Demonstrates how a parent component can supply parameters
    [Parameter]
    public string Title { get; set; }

    [Parameter]
    public bool isOpen { get; set; }
}